generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     Role   @default(USER)

  measures Measure[]

  // Sessões como aluno
  sessionsAsUser Session[] @relation("UserSessions")

  // Sessões como treinador
  sessionsAsTrainer Session[] @relation("TrainerSessions")
}

model Session {
  id       String        @id @default(uuid())
  userId   String
  ptId     String
  dateTime DateTime
  status   SessionStatus @default(PENDING)

  // Relação para o aluno
  user User @relation("UserSessions", fields: [userId], references: [id])

  // Relação para o treinador
  trainer User @relation("TrainerSessions", fields: [ptId], references: [id])
}

model Measure {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  date       DateTime @default(now())
  weight     Float
  muscleMass Float
  bodyFat    Float
  height     Float
  visceral   Int
}

enum SessionStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

enum Role {
  USER
  TRAINER
  ADMIN
}
